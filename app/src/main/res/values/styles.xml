<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlActivated">@color/textHintColor</item>
        <item name="colorControlHighlight">@color/textHintColor</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="TextColor">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="MyProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/lightPrimary</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textColorPrimary">@color/lightPrimary</item>
        <item name="android:textSize">@dimen/_12sdp</item>

    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="background">@color/lightPrimary</item>
    </style>


    <style name="NavigationDrawerStyle">

        <item name="android:textSize">@dimen/_11sdp</item><!-- text size in menu-->
        <item name="android:itemBackground">@color/colorPrimary</item>

        <!-- item size in menu-->
        <!-- item padding left in menu-->
        <item name="listPreferredItemHeightSmall">40dp</item>
        <item name="listPreferredItemPaddingLeft">10dp</item>

        <item name="android:listDivider">@color/colorPrimary</item>
        <!-- item padding right in menu-->

        <item name="listPreferredItemPaddingRight">10dp</item>
        <item name="android:backgroundSplit">@color/colorPrimary</item>
        <item name="android:textStyle">normal</item>


    </style>

    <style name="WidthMatchHeightWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <style name="textPrimary">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>


    </style>

    <style name="textBlack">

        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>


    </style>

    <style name="textIcon">
        <item name="android:textSize">@dimen/_35sdp</item>
        <item name="android:textColor">@color/colorPrimary</item>


    </style>


    <style name="SheetDialog" parent="Theme.Design.BottomSheetDialog">
        <!--<item name="android:windowCloseOnTouchOutside">false</item>-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.3</item>
        <item name="android:windowFrame">@null</item>

        <item name="android:windowIsFloating">true</item>
    </style>


    <style name="Required">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/primary_red</item>

        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:paddingLeft">@dimen/_1sdp</item>
    </style>

    <style name="TextWrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>

        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Edittext">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:background">@drawable/edittext_boarder</item>

        <item name="android:digits">abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Edittext_Email">
        <item name="android:padding">@dimen/_8sdp</item>
        <item name="android:layout_marginTop">@dimen/_5sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:background">@drawable/edittext_boarder</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="error_appearance">
        <item name="android:textColor">@color/primary_red</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:textSize">@dimen/_8sdp</item>
    </style>


    <style name="TextLabel">
        <item name="android:textColor">@color/colorPrimary</item>

        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="colorControlNormal">@color/textHintColor</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>


    <style name="TextInputLayoutLabel" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/text_light_grey</item>
        <item name="colorControlNormal">@color/text_light_grey</item>
        <item name="colorControlActivated">@color/text_light_grey</item>
    </style>


    <style name="TextInputLayoutLabelRefund" parent="Widget.Design.TextInputLayout">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/textColor</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:paddingTop">@dimen/_5sdp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/light_gray</item>
        <item name="colorControlNormal">@color/light_gray</item>
        <item name="colorControlActivated">@color/light_gray</item>
    </style>

    <style name="MyDatePickerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:colorControlActivated">#ffea00</item>

        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>

    </style>

    <style name="MyDatePickerSpinnerStyle" parent="@android:style/Widget.Material.DatePicker">
        <item name="android:datePickerMode">spinner</item>
        <item name="android:calendarViewShown">false</item>
        <item name="colorControlNormal">#d50000</item>

    </style>

    <style name="DatePickerSpinner">
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:colorControlNormal">@color/black</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>

        <item name="android:titleTextAppearance">@style/ToolbarTitleStyle</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/lightPrimary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/lightPrimary</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="gradientButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_35sdp</item>
        <item name="android:layout_marginBottom">@dimen/_20sdp</item>
        <item name="android:layout_marginStart">@dimen/_35sdp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
        <item name="android:background">@drawable/btn_primary_enable</item>
    </style>
</resources>

